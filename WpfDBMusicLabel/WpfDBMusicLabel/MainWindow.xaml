                    Content="Data inizio:" 
                    HorizontalAlignment="Left" 
                    Margin="10,259,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="133"/>
                <DatePicker Name="ContractStart" 
                            HorizontalAlignment="Left" 
                            Margin="148,259,0,0" 
                            VerticalAlignment="Top" 
                            Height="30" 
                            Width="149"/>
                <Label x:Name="ContractEndDateLabel" 
                    Content="Data fine:" 
                    HorizontalAlignment="Left" 
                    Margin="10,293,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="133"/>
