                          HorizontalAlignment="Left" 
                          Margin="148,223,0,0" 
                          VerticalAlignment="Top" 
                          Width="149" 
                          Height="30"
                          DataContext="{Binding NewFirmatario}"
                          ItemsSource="{Binding Ruoli}"
                          SelectedItem="{Binding Ruolo}"/>
