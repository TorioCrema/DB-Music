                         Width="149" 
                         Height="30" 
                         FontSize="16"/>
            </Grid>
            <Grid Name="ProjectInsertGrid" 
                  Margin="0,1,240,0" 
                  Visibility="Collapsed">
                <Label Name="ProjectNameLabel" 
                       Content="Nome:" 
                       HorizontalAlignment="Left" 
                       Margin="10,10,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15"/>
                <TextBox x:Name="ProjectNameTB" 
                    HorizontalAlignment="Left" 
                    Margin="158,10,0,0" 
                    TextWrapping="Wrap" 
                    Text="" 
                    VerticalAlignment="Top" 
                    Width="149" 
                    Height="30" 
                    FontSize="16"/>
                <Label x:Name="ProjectNMembersLabel" 
                       Content="Numero membri:" 
                       HorizontalAlignment="Left" 
                       Margin="10,45,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15" 
                       Width="133"/>
                <TextBox Name="ProjectNMembersTB" 
                         HorizontalAlignment="Left" 
                         Margin="158,45,0,0" 
                         TextWrapping="Wrap" 
