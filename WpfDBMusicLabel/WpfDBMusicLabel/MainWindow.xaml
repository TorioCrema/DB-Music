                            VerticalAlignment="Top" 
                            Height="30" 
                            Width="149"/>
                <Label x:Name="ProjectDisbandDateLabel" 
                    Content="Data scioglimento: *" 
                    HorizontalAlignment="Left" 
                    Margin="10,115,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="148"/>
                <DatePicker Name="ProjectDisbandDatePicker" 
                            HorizontalAlignment="Left" 
                            Margin="158,115,0,0" 
                            VerticalAlignment="Top" 
                            Height="30" 
