<Window x:Class="WpfDBMusicLabel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:WpfDBMusicLabel.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="960"
        Closing="Window_Closing"
        ResizeMode="NoResize">
    <Window.DataContext>
        <viewModels:VModel x:Name="VModel" />
    </Window.DataContext>
    <Grid Name="Connection" Visibility="Visible" Margin="0,0,0,-1">
        <ComboBox Name="ActionsListCB" ItemsSource="{Binding ActionsList}" FontSize="15" Margin="10,13,797,486" SelectedIndex="0" />
        <Button Content="Visualizza" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Height="30" Width="153" IsEnabled="False" />
        <Button Content="Inserisci" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Height="30" Width="153" IsEnabled="False" />
        <Button Content="Elimina" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" Height="30" Width="153" IsEnabled="False" />
        <Grid Name="ViewGrid" Margin="125,1,0,-1" Visibility="Hidden" Grid.Column="3">
            <ListBox Name="ViewLB" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="15" FontFamily="Georgia" Margin="10,0,0,0"/>
        </Grid>
        <Grid Name="SelectGrid" Margin="725,11,3,10" Visibility="Visible">
            <ListBox Name="SelectLB" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionMode="Multiple" FontSize="15" FontFamily="Georgia" Margin="10,0,0,69"/>
            <Button Content="Conferma" HorizontalAlignment="Center" Margin="0,452,0,0" VerticalAlignment="Top" Width="190" Height="42"/>
        </Grid>
    </Grid>
</Window>
