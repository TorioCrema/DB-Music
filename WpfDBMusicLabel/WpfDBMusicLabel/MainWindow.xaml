                         HorizontalAlignment="Left" 
                         Margin="148,80,0,0" 
                         TextWrapping="Wrap" 
                         Text="" 
                         VerticalAlignment="Top" 
                         Width="149" 
                         Height="30" 
                         FontSize="16"/>
                <Label x:Name="ProdDateLabel" 
                    Content="Data di uscita:" 
                    HorizontalAlignment="Left" 
                    Margin="10,115,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="133"/>
                <DatePicker Name="ProdDatePicker" HorizontalAlignment="Left" 
                            Margin="148,115,0,0" 
                            VerticalAlignment="Top" 
                            Width="149" 
                            Height="30"
                            FontSize="15"
                            Text=""/>
                <Label x:Name="ProdType" 
                    Content="Tipo:" 
                    HorizontalAlignment="Left" 
                    Margin="10,150,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="133"/>
                <CheckBox Name="ProdCDChB" 
                          Content="CD" 
                          HorizontalAlignment="Left" 
                          Margin="148,159,0,0" 
                          VerticalAlignment="Top"/>
                <CheckBox Name="ProdVinylChB" 
                          Content="Vinile" 
                          HorizontalAlignment="Center" 
                          Margin="0,159,0,0" 
                          VerticalAlignment="Top"/>
                <CheckBox Name="ProdCassetteChB" 
                          Content="Cassetta" 
                          HorizontalAlignment="Left" 
                          Margin="323,159,0,0" 
                          VerticalAlignment="Top"/>
