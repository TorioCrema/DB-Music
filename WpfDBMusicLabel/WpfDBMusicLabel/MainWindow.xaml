                         Margin="148,45,0,0" 
                         TextWrapping="Wrap" 
                         Text="" 
                         VerticalAlignment="Top" 
                         Width="149" 
                         Height="30" 
                         FontSize="16"/>
                <Label x:Name="TrackDurationLabel" 
                       Content="Durata:" 
                       HorizontalAlignment="Left" 
                       Margin="10,80,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15" 
                       Width="133"/>
                <TextBox Name="TrackDurationTB" 
                         HorizontalAlignment="Left" 
                         Margin="148,80,0,0" 
                         TextWrapping="Wrap" 
                         Text="" 
                         VerticalAlignment="Top" 
                         Width="149" 
                         Height="30" 
                         FontSize="16"
                         IsEnabled="False"/>
                <Label x:Name="TrackDateLabel" 
                    Content="Data di uscita:" 
                    HorizontalAlignment="Left" 
                    Margin="10,115,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="133"/>
                <DatePicker Name="TrackDatePicker" HorizontalAlignment="Left" 
                            Margin="148,115,0,0" 
                            VerticalAlignment="Top" 
                            Width="149" 
                            Height="30"
                            FontSize="15"
                            Text=""/>
                <Label x:Name="TrackFeatLabel" 
                    Content="Featuring: *" 
                    HorizontalAlignment="Left" 
                    Margin="10,150,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="133"/>
                <ListBox Name="TrackFeatLB" d:ItemsSource="{d:SampleData ItemCount=5}" 
                         Margin="148,150,240,240"/>
                <Label x:Name="TrackTextLabel" 
                    Content="Testo: *" 
                    HorizontalAlignment="Left" 
                    Margin="10,288,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="133"/>
                <RichTextBox HorizontalAlignment="Left" 
                             Margin="148,288,0,10" 
                             Width="350" 
                             FontSize="15">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text=""/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Grid>
            <Grid Name="ContractInsertGrid" 
                  Margin="0,1,240,0"
                  DataContext="{Binding FirmatarioViewModel}"
                  Visibility="{Binding FirmatarioInsertVisibility}">
                <Label Name="ContractNameLabel" 
                       Content="Nome:" 
                       HorizontalAlignment="Left" 
                       Margin="10,10,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15" Width="133"/>
                <TextBox x:Name="FirmatarioNome" 
                         HorizontalAlignment="Left" 
                         Margin="148,10,0,0" 
                         TextWrapping="Wrap" 
                         DataContext="{Binding NewFirmatario}"
                         Text="{Binding Nome}" 
                         VerticalAlignment="Top" 
                         Width="149" 
                         Height="30" 
                         FontSize="16"/>
                <Label x:Name="ContractSurnameLabel" 
                       Content="Cognome:" 
                       HorizontalAlignment="Left" 
                       Margin="10,83,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15" 
                       Width="133"/>
                <TextBox Name="FirmatarioCognome" 
                         HorizontalAlignment="Left" 
                         Margin="148,83,0,0" 
                         TextWrapping="Wrap" 
                         DataContext="{Binding NewFirmatario}"
                         Text="{Binding Cognome}" 
                         VerticalAlignment="Top" 
                         Width="149" 
                         Height="30" 
                         FontSize="16"/>
                <Label x:Name="ContractAddressLabel" 
                       Content="Via:" 
                       HorizontalAlignment="Left" 
                       Margin="10,118,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15" 
                       Width="133"/>
