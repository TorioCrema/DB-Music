                         HorizontalAlignment="Left" 
                         Margin="148,80,0,0" 
                         TextWrapping="Wrap" 
                         Text="" 
                         VerticalAlignment="Top" 
                         Width="149" 
                         Height="30" 
                         FontSize="16"/>
            </Grid>
            <Grid Name="ProdInsertGrid" 
                  Margin="0,1,240,0" 
                  Visibility="Collapsed">
                <Label Name="ProdAlbumLabel" 
                       Content="Album:" 
                       HorizontalAlignment="Left" 
                       Margin="10,10,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15"/>
                <ComboBox Name="ProdAlbumsCB" 
                          HorizontalAlignment="Left" 
                          Margin="148,10,0,0" 
                          VerticalAlignment="Top" 
                          Width="149" 
                          Height="30"/>
                <Label Name="ProdDescLabel" 
                       Content="Descrizione:" 
                       HorizontalAlignment="Left" 
                       Margin="10,220,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15" 
