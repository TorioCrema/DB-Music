                    Content="Formato vinili:" 
                    HorizontalAlignment="Left" 
                    Margin="10,185,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="133"/>
                <RadioButton Name="Prod33Vinyl" 
                             Content="33 giri" 
                             HorizontalAlignment="Left" 
                             Margin="148,194,0,0" 
                             VerticalAlignment="Top"/>
                <RadioButton x:Name="Prod45Vinyl" 
                    Content="45 giri" 
                    HorizontalAlignment="Left" 
                    Margin="245,194,0,0" 
                    VerticalAlignment="Top"/>
                <Label x:Name="ProdTotalPriceLabel" 
                    Content="Costo totale:" 
                    HorizontalAlignment="Left" 
                    Margin="322,80,0,0" 
                    VerticalAlignment="Top" 
                    FontSize="15" 
                    Width="93"/>
