                         Height="30"
                         FontSize="16"/>
                <Label x:Name="ContractCivicoLabel" 
                       Content="Civico:" 
                       HorizontalAlignment="Left" 
                       Margin="10,153,0,0" 
                       VerticalAlignment="Top" 
                       FontSize="15" 
                       Width="133"/>
                <TextBox Name="FirmatarioCivico" 
                         HorizontalAlignment="Left" 
                         Margin="148,153,0,0" 
                         TextWrapping="Wrap"
                         DataContext="{Binding NewFirmatario}"
